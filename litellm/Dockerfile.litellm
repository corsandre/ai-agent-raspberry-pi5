# LiteLLM Proxy for Raspberry Pi 5
FROM python:3.11-slim-bookworm

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    g++ \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd -m -u 1001 litellm

WORKDIR /app

# Copy requirements
COPY requirements_litellm.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements_litellm.txt

# Copy configuration
COPY config.yaml /app/
COPY models.json /app/

# Switch to non-root user
USER litellm

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:4000/health || exit 1

EXPOSE 4000

CMD ["litellm", "--config", "/app/config.yaml", "--port", "4000", "--host", "0.0.0.0"]