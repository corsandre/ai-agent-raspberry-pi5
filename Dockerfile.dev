# Dockerfile.dev
# Development Dockerfile with debugging tools

FROM python:3.11-slim-bookworm AS builder

# Install build dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    python3-dev \
    curl \
    git \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd -m -u 1000 aiagent

WORKDIR /app

# Copy requirements first for caching
COPY requirements.txt requirements-dev.txt ./

# Install Python dependencies
USER aiagent
RUN pip install --user --no-cache-dir -r requirements.txt -r requirements-dev.txt

# Runtime stage
FROM python:3.11-slim-bookworm

# Install development tools
RUN apt-get update && apt-get install -y \
    curl \
    git \
    wget \
    vim \
    nano \
    htop \
    less \
    procps \
    lsof \
    net-tools \
    iputils-ping \
    dnsutils \
    jq \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user with sudo
RUN groupadd -g 1000 aiagent && \
    useradd -m -u 1000 -g aiagent -s /bin/bash aiagent && \
    echo 'aiagent ALL=(ALL) NOPASSWD: ALL' >> /etc/sudoers.d/aiagent && \
    chmod 0440 /etc/sudoers.d/aiagent

USER aiagent
WORKDIR /app

# Copy Python packages from builder
COPY --from=builder --chown=aiagent:aiagent /home/aiagent/.local /home/aiagent/.local

# Set Python path
ENV PATH="/home/aiagent/.local/bin:${PATH}"
ENV PYTHONPATH="/app"
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Copy application code
COPY --chown=aiagent:aiagent . .

# Create necessary directories
RUN mkdir -p /workspace /app/logs && \
    chown aiagent:aiagent /workspace /app/logs

# Install development Python packages
RUN pip install --no-cache-dir \
    debugpy \
    ipython \
    ipdb \
    watchdog \
    black \
    flake8 \
    mypy \
    pytest \
    pytest-asyncio \
    pytest-cov \
    python-dotenv

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:3000/health', timeout=2)" || exit 1

# Expose ports
EXPOSE 3000 5000 5678 9229

# Default command (will be overridden by docker-compose)
CMD ["python", "docker_main_agent.py"]